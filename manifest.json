{
    "name": "Helix Helper",
    "version": "1.0",
    "description": "A set of helpers for working with Helix content.",
    "permissions": ["activeTab", "storage"],
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "img/helix-logo16.png",
        "32": "img/helix-logo32.png",
        "48": "img/helix-logo48.png",
        "128": "img/helix-logo128.png"
      }
    },
    "icons": {
      "16": "img/helix-logo16.png",
      "32": "img/helix-logo32.png",
      "48": "img/helix-logo48.png",
      "128": "img/helix-logo128.png"
    },
    "manifest_version": 2
}